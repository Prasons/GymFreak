# Backend Environment Variables
NODE_ENV=development
PORT=8080

# Database Configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=admin123
DB_NAME=gymfreakdb

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
